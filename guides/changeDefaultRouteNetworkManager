cat <<EOF > /etc/NetworkManager/dispatcher.d/change-routes
#!/bin/sh

IF=$1
STATUS=$2
MY_METRIC=1

if [ "$IF" = "ens192" ]
then
        case "$STATUS" in
                up) 
                ip route del default dev $IF
                ip route add default via $DHCP4_ROUTERS dev $IF metric $MY_METRIC
                ;;
                *)
                ;;
        esac
fi
EOF



# static DNS without dhcp
you'll need to add "PEERDNS=no" in /etc/sysconfig/network-scripts/ifcfg-ens192 file
